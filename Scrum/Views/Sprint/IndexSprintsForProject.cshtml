@model IEnumerable<Scrum.Models.SprintViewModel.SprintViewModel>

@{
    ViewBag.Title = "IndexSprintsForProject";
    var projectName = ViewBag.Project.ProjectName;
    var projectID = ViewBag.Project.ProjectID;
}

<h2> @projectName  </h2>



<td>
   
</td>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SprintID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SprintName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainTask)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Create new sprint", "AddSprint", new { projectID = ViewBag.Project.ProjectID},  new { @class = "btn btn-success" })
        </td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SprintID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SprintName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            <div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = item.SprintID }, new { @class="btn btn-primary"})
                @Html.ActionLink("Details", "Details", new { id = item.SprintID }, new { @class="btn btn-info"}) 
            </div>
        </td>
    </tr>
}

</table>
